  <script>
    function toHiragana(str) {
      return str.replace(/[\u30A1-\u30F6]/g, ch => String.fromCharCode(ch.charCodeAt(0) - 0x60));
    }

    function filterBoxes(input) {
      const query = toHiragana(input.value.toLowerCase());
      const container = input.nextElementSibling.querySelector('.scroll-container') || input.nextElementSibling;
      const boxes = container.querySelectorAll('.link-box');
      boxes.forEach(box => {
        const text = toHiragana(box.textContent.toLowerCase());
        box.style.display = text.includes(query) ? 'flex' : 'none';
      });
    }
  </script>
